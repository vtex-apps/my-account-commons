{
  "version": "1.3.0",
  "devDependencies": {
    "@vtex/intl-equalizer": "^2.4.2",
    "husky": "^3.0.9"
  },
  "scripts": {
    "verify": "yarn messages && cd ./react && yarn lint && yarn test",
    "messages": "intl-equalizer && intl-equalizer --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn messages && cd ./react && yarn lint",
      "pre-push": "yarn verify"
    }
  }
}
